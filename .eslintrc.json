{
  "env": {
    "node": true
  },
  "extends": ["plugin:import/typescript", "eslint:recommended", "airbnb-base", "prettier"],
  "ignorePatterns": ["dist/"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": ["error", "ignorePackages", { "ts": "never" }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  }
}
